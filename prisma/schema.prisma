generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum MessageRole {
  user
  assistant
}

enum MemoryType {
  PROFILE
  PEOPLE  
  PROJECT
  OPEN_LOOP
}

enum TodoStatus {
  PENDING
  COMPLETED
  SKIPPED
}

enum TodoKind {
  OPEN_LOOP
  COMMITMENT
  THREAD
  FRICTION
  HABIT
  REMINDER
}

model Session {
  id             String   @id @default(cuid())
  userId         String
  personaId      String
  startedAt      DateTime @default(now())
  lastActivityAt DateTime @default(now())
  endedAt        DateTime?
  turnCount      Int      @default(0)

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona PersonaProfile @relation(fields: [personaId], references: [id], onDelete: Cascade)
  summary SessionSummary?

  @@index([userId, personaId, lastActivityAt])
  @@index([userId, personaId, startedAt])
}

model SessionSummary {
  id        String   @id @default(cuid())
  sessionId String   @unique
  userId    String
  personaId String
  summary   String
  metadata  Json?
  model     String?
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona PersonaProfile @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@index([userId, personaId, createdAt])
}

model User {
  id          String   @id @default(cuid())
  clerkUserId String   @unique
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userSeed      UserSeed?
  messages      Message[]
  memories      Memory[]
  summarySpines SummarySpine[]
  sessionStates SessionState[]
  todos         Todo[]
  sessions      Session[]
  sessionSummaries SessionSummary[]
}

model PersonaProfile {
  id          String @id @default(cuid())
  slug        String @unique
  name        String
  description String
  promptPath  String
  llmModel    String
  ttsVoiceId  String
  language    String @default("en")
  isActive    Boolean @default(true)
  enableSummarySpine Boolean @default(true)
  createdAt   DateTime @default(now())
  
  sessionStates SessionState[]
  todos         Todo[]
  sessions      Session[]
  sessionSummaries SessionSummary[]
}

model UserSeed {
  id        String   @id @default(cuid())
  userId    String   @unique
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SessionState {
  id        String   @id @default(cuid())
  userId    String
  personaId String
  state     Json?
  rollingSummary String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona PersonaProfile @relation(fields: [personaId], references: [id])
  
  @@unique([userId, personaId])
}

model Todo {
  id          String     @id @default(cuid())
  userId      String
  personaId   String
  content     String
  dedupeKey   String?
  status      TodoStatus @default(PENDING)
  kind        TodoKind   @default(OPEN_LOOP)
  createdAt   DateTime   @default(now())
  completedAt DateTime?

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona PersonaProfile @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@index([userId, personaId, status])
  @@index([userId, personaId, kind, status, dedupeKey])
}

model Message {
  id         String      @id @default(cuid())
  userId     String
  personaId  String?
  role       MessageRole
  content    String
  audioUrl   String?
  metadata   Json?
  createdAt  DateTime    @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([userId, personaId, createdAt])
}

model Memory {
  id          String                         @id @default(cuid())
  userId      String
  personaId   String?
  type        MemoryType
  content     String
  memoryKey   String?
  embedding   Unsupported("vector(1536)")?
  metadata    Json?
  pinned      Boolean                        @default(false)
  createdAt   DateTime                       @default(now())
  updatedAt   DateTime                       @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, type])
  @@index([userId, personaId, type])
  @@unique([userId, memoryKey])
}

model SummarySpine {
  id              String   @id @default(cuid())
  userId          String
  conversationId  String   @default("default")
  version         Int      @default(1)
  content         String
  messageCount    Int
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, conversationId, version])
  @@index([userId, conversationId])
}
